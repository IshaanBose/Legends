<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reported_user_colon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/reported_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1FRTelOMARRO6PFM7322"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:lines="1"
            android:ellipsize="end"
            android:layout_weight="0.7"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reported_by_colon"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.22"/>

        <TextView
            android:id="@+id/reported_by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="UID"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.78"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reason_colon"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.15"/>

        <TextView
            android:id="@+id/reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spam"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.85"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/time_colon"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12/03/2021 12:16 AM"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.9"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/assigned_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/assigned_to_colon"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.22"/>

        <TextView
            android:id="@+id/assigned_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textColor="?attr/colorOnPrimary"
            android:layout_weight="0.78"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_taken"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:id="@+id/action_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginStart="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_reasoning"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:id="@+id/action_reasoning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some reasoning"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginStart="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:id="@+id/action_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Days"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginStart="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_taken_on"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:id="@+id/action_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 April 2021"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginStart="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>