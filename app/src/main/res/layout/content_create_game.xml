<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_game_name"
            android:textColor="@color/appbar2"
            android:textSize="15sp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="@string/enter_game_name"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:theme="@style/Theme.Legends.EditText"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_type"
            android:textColor="@color/appbar2"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

        <Spinner
            android:id="@+id/game_type_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="@string/enter_game_type"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:theme="@style/Theme.Legends.EditText"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_location"
            android:textColor="@color/appbar2"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

        <TextView
            android:id="@+id/set_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_home"
            android:textColor="@color/clickable_text"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"/>

        <TextView
            android:id="@+id/set_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_current_location"
            android:textColor="@color/clickable_text"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="3dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_hiphen"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp" />

            <TextView
                android:id="@+id/game_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_600"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_optional"
            android:textColor="@color/appbar2"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/game_description"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:hint="@string/enter_details_about_your_game"
            android:inputType="textMultiLine"
            android:lines="6"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:theme="@style/Theme.Legends.EditText"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_player_count"
                android:textColor="@color/appbar2"
                android:textSize="15sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="40dp"/>

            <TextView
                android:id="@+id/textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/min_player_count"
                android:textColor="@color/appbar2"
                android:textSize="15sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="105dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/max_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:ems="5"
                android:inputType="number"
                android:hint="@string/default_infinite"
                android:maxLength="3"
                android:theme="@style/Theme.Legends.EditText"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="47dp"/>

            <EditText
                android:id="@+id/min_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:ems="5"
                android:inputType="number"
                android:hint="@string/default_2"
                android:maxLength="3"
                android:theme="@style/Theme.Legends.EditText"
                android:layout_marginLeft="114dp"
                android:layout_marginStart="114dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/timing_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_timing"
            android:textColor="@color/appbar2"
            android:textSize="15sp"
            android:theme="@style/Theme.Legends.Switch"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:enabled="false"
                android:onClick="createTImePicker"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <TextView
                android:id="@+id/from_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:enabled="false"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:enabled="false"
                android:onClick="createTImePicker"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <TextView
                android:id="@+id/to_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:enabled="false"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/schedule_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_schedule"
            android:textColor="@color/appbar2"
            android:textSize="15sp"
            android:theme="@style/Theme.Legends.Switch"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:paddingStart="35dp"
            android:paddingRight="35dp"
            android:paddingEnd="35dp">

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/mon"
                android:textOff="@string/mon"
                android:enabled="false"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/tue"
                android:textOff="@string/tue"
                android:enabled="false"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/wed"
                android:textOff="@string/wed"
                android:enabled="false"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/thu"
                android:textOff="@string/thu"
                android:enabled="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:paddingStart="35dp"
            android:paddingRight="35dp"
            android:paddingEnd="35dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/fri"
                android:textOff="@string/fri"
                android:enabled="false"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/sat"
                android:textOff="@string/sat"
                android:enabled="false"/>

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/sun"
                android:textOff="@string/sun"
                android:enabled="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView_every"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every"
                android:textColor="@color/disabled_text"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"/>

            <EditText
                android:id="@+id/repeat_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/parenthesis_1"
                android:textAlignment="center"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:theme="@style/Theme.Legends.EditText" />

            <Spinner
                android:id="@+id/repeat_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/create_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_game"
            android:onClick="createGame"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>