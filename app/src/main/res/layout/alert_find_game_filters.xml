<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_colon"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"/>

        <EditText
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:textSize="16sp"
            android:hint="@string/parenthesis_2"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:theme="@style/Theme.Legends.EditText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/km"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/game_type_holder"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_type_colon"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"/>

            <Spinner
                android:id="@+id/game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/remove_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_theme_subtract_icon"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/custom_game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:hint="@string/enter_game_type"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:theme="@style/Theme.Legends.EditText"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/time_holder"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_colon"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"/>

            <EditText
                android:id="@+id/from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:textSize="16sp"
                android:ems="6"
                android:maxLength="5"
                android:hint="@string/format_23_59"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:theme="@style/Theme.Legends.EditText"/>

            <ImageView
                android:id="@+id/remove_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_theme_subtract_icon"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_colon"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"/>

            <EditText
                android:id="@+id/to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:textSize="16sp"
                android:ems="6"
                android:maxLength="5"
                android:hint="@string/format_23_59"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:theme="@style/Theme.Legends.EditText"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/schedule_holder"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_colon"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"/>

            <ImageView
                android:id="@+id/remove_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_theme_subtract_icon"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="240dp"
                android:layout_marginLeft="240dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sa"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su"
                app:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/invalid_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="@color/red"
        android:text="@string/invalid_filter_data"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <Spinner
            android:id="@+id/filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/add_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_filter"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="3dp"
            android:textSize="16sp"
            android:textColor="#E8A600"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>