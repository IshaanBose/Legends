<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bose.legends">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Legends">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

        <activity android:name=".GamePage"
            android:theme="@style/Theme.Legends"/>

        <activity
            android:name=".MapsActivityCurrentPlace"
            android:theme="@style/Theme.Legends.Maps" />
        <activity
            android:name=".CreateGame"
            android:theme="@style/Theme.Legends"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SignIn"
            android:theme="@style/Theme.Legends.Fullscreen" />
        <activity
            android:name=".ActivityLauncher"
            android:theme="@style/Theme.Legends.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Legends" />
        <activity
            android:name=".SignUp"
            android:theme="@style/Theme.Legends.Fullscreen" />
    </application>

</manifest>